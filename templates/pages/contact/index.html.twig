{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}


{% block body %}
	<div class="contact-container">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}
		<h1 class="text-3xl my-4 ml-3">Formulaire de contact</h1>

		<div class="my-7 sm:w-5/6 md:w-3/6 font-sans bg-white m-auto">
			{{ form_start(contactForm, {'attr': {'class': 'w-full'}}) }}
				{{ form_row(contactForm.fullName) }}

				{{ form_row(contactForm.companyName) }}

				{{ form_row(contactForm.email) }}

				{{ form_row(contactForm.subject) }}

				{{ form_row(contactForm.message) }}

				{{ form_row(contactForm.submit, {'attr': {'class': 'mt-3 ml-3 px-4 py-2 rounded-md bg-amber-700 hover:bg-amber-800'}} ) }}

			{{ form_end(contactForm) }}
		</div>
	</div>
{% endblock %}
